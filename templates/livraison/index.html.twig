{% extends 'base.html.front.twig' %}

{% block title %}Liste des livraisons | AfkArt{% endblock %}

{% block body %}
<section class="container-wide" style="max-width: 1100px; margin: 0 auto; padding: 2rem 1.5rem;">
    <div class="list-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 2rem; color: #3d2817;">Gestion des Livraisons</h1>
        <a href="{{ path('app_livraison_new') }}" class="btn-custom" style="background: #8b5e4a; color: white; padding: 0.6rem 1.25rem; border-radius: 50px; text-decoration: none; font-weight: 500;">+ Ajouter une livraison</a>
    </div>
    <div class="table-container" style="background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); overflow: hidden;">
        <table style="width: 100%; border-collapse: collapse; text-align: left;">
            <thead>
                <tr style="background: #f8f6f3;">
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">ID</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Date de Livraison</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Adresse</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Statut</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for livraison in livraisons %}
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 1rem 1.25rem; font-weight: 600; color: #8b5e4a;">#{{ livraison.id }}</td>
                    <td style="padding: 1rem 1.25rem; color: #5a5450;">{{ livraison.datelivraison ? livraison.datelivraison|date('d/m/Y H:i') : 'Non définie' }}</td>
                    <td style="padding: 1rem 1.25rem;">{{ livraison.addresslivraison }}</td>
                    <td style="padding: 1rem 1.25rem;"><span style="background: #f5f0eb; color: #3d2817; padding: 0.25rem 0.6rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">{{ livraison.statutlivraison }}</span></td>
                    <td style="padding: 1rem 1.25rem; text-align: right;">
                        <a href="{{ path('app_livraison_show', {'id': livraison.id}) }}" style="color: #8b5e4a; text-decoration: none; font-weight: 500; margin-right: 0.75rem;">Détails</a>
                        <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}" style="color: #6b7c5e; text-decoration: none; font-weight: 500; margin-right: 0.75rem;">Modifier</a>
                        <form method="post" action="{{ path('app_livraison_delete', {'id': livraison.id}) }}" onsubmit="return confirm('Supprimer cette livraison ?');" style="display:inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id) }}">
                            <button type="submit" style="background: none; border: none; padding: 0; color: #d9534f; cursor: pointer; font-weight: 500;">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="5" style="padding: 2rem; text-align: center; color: #999;">Aucune livraison enregistrée.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}
