{% extends 'base.html.front.twig' %}

{% block title %}Liste des livraisons | AfkArt{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css" rel="stylesheet">
    <style>
        /* --- CALENDRIER THÃˆME CLAIR ET PETIT --- */
        #calendar-container {
            display: none; 
            max-width: 350px; 
            margin: 20px auto;
            background: #ffffff; /* Fond blanc */
            padding: 15px;
            border-radius: 12px;
            color: #3d2817; /* Texte sombre */
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border: 1px solid #eee;
        }

        /* Ajustement des tailles pour le mini-calendrier */
        .fc { font-size: 0.7rem !important; }
        .fc-toolbar-title { font-size: 0.9rem !important; color: #3d2817 !important; font-weight: bold; }
        .fc-button { background: #f8f6f3 !important; border: 1px solid #ddd !important; color: #3d2817 !important; padding: 2px 5px !important; }
        .fc-daygrid-day-frame { min-height: 35px !important; }
        .fc-day-today { background: #f5f0eb !important; } /* Couleur assortie Ã  votre charte */
        
        /* Bouton de contrÃ´le */
        .btn-toggle-cal {
            display: block;
            margin: 0 auto 1.5rem auto;
            background: #3d2817;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 500;
            transition: 0.3s;
        }
        .btn-toggle-cal:hover { background: #8b5e4a; }
        .link-disabled { color: #ccc; cursor: not-allowed; margin-right: 0.75rem; font-weight: 500; }
    </style>
{% endblock %}

{% block body %}
<section class="container-wide" style="max-width: 1100px; margin: 0 auto; padding: 2rem 1.5rem;">
    <div class="list-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 2rem; color: #3d2817;">Gestion des Livraisons</h1>
        <a href="{{ path('app_livraison_new') }}" class="btn-custom" style="background: #8b5e4a; color: white; padding: 0.6rem 1.25rem; border-radius: 50px; text-decoration: none; font-weight: 500;">+ Ajouter une livraison</a>
    </div>

    {# BOUTON AFFICHAGE #}
    <button class="btn-toggle-cal" onclick="toggleCalendar()">ðŸ“… Afficher/Masquer le Calendrier</button>

    {# LE MINI CALENDRIER (ThÃ¨me Clair) #}
    <div id="calendar-container">
        <div id="calendar"></div>
    </div>

    <div class="table-container" style="background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); overflow: hidden;">
        <table style="width: 100%; border-collapse: collapse; text-align: left;">
            <thead>
                <tr style="background: #f8f6f3;">
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Date de Livraison</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Adresse</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666;">Statut</th>
                    <th style="padding: 1rem 1.25rem; font-size: 0.8rem; text-transform: uppercase; color: #666; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for livraison in livraisons %}
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 1rem 1.25rem; color: #5a5450;">{{ livraison.datelivraison ? livraison.datelivraison|date('d/m/Y H:i') : 'Non dÃ©finie' }}</td>
                    <td style="padding: 1rem 1.25rem;">{{ livraison.addresslivraison }}</td>
                    <td style="padding: 1rem 1.25rem;"><span style="background: #f5f0eb; color: #3d2817; padding: 0.25rem 0.6rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">{{ livraison.statutlivraison }}</span></td>
                    <td style="padding: 1rem 1.25rem; text-align: right;">
                        <a href="{{ path('app_livraison_show', {'id': livraison.id}) }}" style="color: #8b5e4a; text-decoration: none; font-weight: 500; margin-right: 0.75rem;">DÃ©tails</a>
                        
                        {% if livraison.statutlivraison == 'livre' %}
                            <span class="link-disabled">Modifier</span>
                            <span class="link-disabled">Supprimer</span>
                        {% else %}
                            <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}"
                               style="color: #8b5e4a; text-decoration: none; font-weight: 500; margin-right: 0.75rem;">
                                Modifier
                            </a>
                            <form method="post" action="{{ path('app_livraison_delete', {'id': livraison.id}) }}" onsubmit="return confirm('Supprimer cette livraison ?');" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id) }}">
                                <button type="submit" style="color: #8b5e4a; background: none; border: none; font-weight: 500; cursor: pointer;">
                                    Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
                {% else %}
                <tr><td colspan="4" style="padding: 2rem; text-align: center; color: #999;">Aucune livraison enregistrÃ©e.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script>
        let calendar;
        function toggleCalendar() {
            const container = document.getElementById('calendar-container');
            if (container.style.display === "none" || container.style.display === "") {
                container.style.display = "block";
                calendar.render();
            } else {
                container.style.display = "none";
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const calendarEl = document.getElementById('calendar');
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                height: 'auto',
                headerToolbar: { left: 'prev', center: 'title', right: 'next' },
                events: "{{ path('fc_load_events') }}"
            });
        });
    </script>
{% endblock %}