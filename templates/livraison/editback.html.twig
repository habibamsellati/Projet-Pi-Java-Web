{% extends 'base.back.html.twig' %}

{% block title %}Modifier la Livraison - Admin{% endblock %}

{% block back_main %}
        <header class="header">
            <h1>Modifier la Livraison</h1>
        </header>
        <div style="background: white; padding: 1.5rem; border-radius: 12px; max-width: 600px;">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_row(form.datelivraison) }}
            {{ form_row(form.addresslivraison) }}
            {{ form_row(form.commande) }}
            {{ form_row(form.livreur) }}
            <button type="submit" style="padding: 0.5rem 1rem; background: #8b5e4a; color: white; border: none; border-radius: 8px; cursor: pointer;">Enregistrer</button>
            <a href="{{ path('back_livraison_index') }}" style="margin-left: 0.5rem; color: #8b5e4a;">Retour</a>
            {{ form_end(form) }}
        </div>
{% endblock %}
