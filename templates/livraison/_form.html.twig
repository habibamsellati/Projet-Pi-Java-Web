{% extends 'base.html.twig' %}

{% block title %}Nouvelle Livraison | AfkArt{% endblock %}

{% block body %}
<header class="header">
    <div class="header-inner container">
        <a href="{{ path('home') }}" class="logo">Afk<span>Art</span></a>
        <nav class="nav">
            <a href="{{ path('app_livraison_index') }}">Livraisons</a>
            <a href="{{ path('app_suivi_livraison_index') }}">Suivis Livraison</a>
            <a href="#galerie">Galerie</a>
            <a href="#contact">Contact</a>
        </nav>
        
    </div>
</header>

<main class="page-wrapper">
    <article class="info-card">
        <h1 class="main-header">Ajouter une Livraison</h1>
        
        <div class="form-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'styled-form'}}) }}
                
                <div class="form-section">
                    <div class="info-group">
                        <label class="info-label">Date de livraison</label>
                        {{ form_widget(form.datelivraison, {'attr': {'class': 'form-input'}}) }}
                        <div class="form-error">{{ form_errors(form.datelivraison) }}</div>
                    </div>

                    <div class="info-group">
                        <label class="info-label">Adresse de livraison</label>
                        {{ form_widget(form.addresslivraison, {'attr': {'class': 'form-input', 'placeholder': 'Ex: 123 Rue de l\'Art, Tunis'}}) }}
                        <div class="form-error">{{ form_errors(form.addresslivraison) }}</div>
                    </div>

                    <div class="info-group">
                        <label class="info-label">Commande associée</label>
                        {{ form_widget(form.commande, {'attr': {'class': 'form-input'}}) }}
                        <div class="form-error">{{ form_errors(form.commande) }}</div>
                    </div>
                     <div class="info-group">
                        <label class="info-label">Livreur associé</label>
                        {{ form_widget(form.livreur, {'attr': {'class': 'form-input'}}) }}
                        <div class="form-error">{{ form_errors(form.livreur) }}</div>
                    </div>
                </div>

                <div class="status-preview">
                    <span class="info-label">Statut initial</span>
                    <span class="badge">En attente</span>
                </div>

                <div class="form-actions-main">
                    <button type="submit" class="btn-custom">Créer la livraison</button>
                </div>

            {{ form_end(form) }}
        </div>

        <div class="actions-footer">
            <a href="{{ path('app_livraison_index') }}" class="btn-retour-simple">
                &larr; Retour à la liste
            </a>
        </div>
    </article>
</main>

<style>
    :root {
        --color-cream: #FAF7F2;
        --color-cream-dark: #F5F0E8;
        --color-terracotta: #C4704B;
        --color-terracotta-dark: #A85D3B;
        --color-brown: #3D3229;
        --color-brown-light: #5C4A3D;
        --shadow-soft: 0 10px 30px rgba(0,0,0,0.05);
    }

    body {
        margin: 0;
        font-family: 'Outfit', sans-serif;
        background-color: var(--color-cream);
        color: var(--color-brown);
    }

    .page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 100px 20px 60px;
        box-sizing: border-box;
    }

    /* Header */
    .header {
        position: fixed; top: 0; width: 100%;
        background: rgba(250,247,242,0.95);
        backdrop-filter: blur(8px); z-index: 100;
        border-bottom: 1px solid rgba(61,50,41,0.1);
    }
    .header-inner {
        display: flex; align-items: center; justify-content: space-between;
        max-width: 1200px; margin: 0 auto; padding: 1rem 1.5rem;
    }
    .logo { font-family: 'Cormorant Garamond', serif; font-size: 1.5rem; text-decoration: none; color: var(--color-brown); font-weight: bold; }
    .logo span { color: var(--color-terracotta); }
    .nav { display: flex; gap: 1.5rem; }
    .nav a { text-decoration: none; color: var(--color-brown-light); font-size: 0.9rem; }

    /* Card */
    .info-card {
        background: white;
        width: 100%;
        max-width: 500px;
        padding: 45px;
        border-radius: 16px;
        box-shadow: var(--shadow-soft);
        border: 1px solid rgba(196, 112, 75, 0.08);
    }

    .main-header {
        font-family: 'Cormorant Garamond', serif;
        color: var(--color-brown);
        text-align: center;
        font-size: 2rem;
        margin-top: 0;
        margin-bottom: 35px;
    }

    /* Form Fields */
    .info-group { margin-bottom: 20px; }
    .info-label {
        display: block; font-size: 0.8rem; color: #999;
        text-transform: uppercase; letter-spacing: 1px; margin-bottom: 8px; font-weight: 600;
    }
    .form-input {
        width: 100%; padding: 12px 16px; border: 1px solid #EEE;
        border-radius: 10px; font-family: 'Outfit', sans-serif;
        font-size: 0.95rem; box-sizing: border-box; background-color: #FAFAFA;
        transition: 0.3s;
    }
    .form-input:focus {
        outline: none; border-color: var(--color-terracotta); background-color: #FFF;
    }

    /* Status Preview */
    .status-preview {
        display: flex; justify-content: space-between; align-items: center;
        background: var(--color-cream); padding: 12px 15px;
        border-radius: 10px; margin-bottom: 25px;
    }
    .badge {
        background: var(--color-cream-dark); color: var(--color-brown);
        padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: 600;
    }

    /* Buttons */
    .btn-custom {
        background-color: var(--color-terracotta); color: white;
        padding: 14px; border-radius: 50px; border: none;
        width: 100%; font-size: 1rem; font-weight: 600; cursor: pointer;
        transition: 0.3s;
    }
    .btn-custom:hover { background-color: var(--color-terracotta-dark); transform: translateY(-2px); }

    .actions-footer {
        margin-top: 30px; padding-top: 20px; border-top: 1px solid #F5F0E8;
        text-align: center;
    }
    .btn-retour-simple { text-decoration: none; color: var(--color-brown-light); font-size: 0.9rem; }
    .form-error { color: #D9534F; font-size: 0.8rem; margin-top: 5px; }

    .mobile-menu-btn { display: none; background: none; border: none; font-size: 1.5rem; color: var(--color-brown); }

    @media (max-width: 768px) {
        .nav { display: none; }
        .mobile-menu-btn { display: block; }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const btn = document.querySelector('.mobile-menu-btn');
        const nav = document.querySelector('.nav');
        if(btn && nav) {
            btn.addEventListener('click', () => nav.classList.toggle('active'));
        }
    });
</script>
{% endblock %}