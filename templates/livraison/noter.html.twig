{% extends 'base.html.front.twig' %}

{% block title %}Noter le Livreur | AfkArt{% endblock %}

{% block body %}
<section style="max-width: 450px; margin: 2rem auto; padding: 2rem; background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08);">
    <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 1.6rem; color: #3d2817; text-align: center; margin-bottom: 1rem;">Noter votre Livreur</h1>
    <div style="text-align: center; margin-bottom: 1.5rem;">
        <div style="width: 70px; height: 70px; background: #f8f6f3; border-radius: 50%; margin: 0 auto 0.75rem; display: flex; align-items: center; justify-content: center; font-size: 2rem;">üöö</div>
        <h2 style="font-family: 'Cormorant Garamond', serif; font-size: 1.4rem; margin: 0;">{{ livraison.livreur ? livraison.livreur.nom : 'Livreur AfkArt' }}</h2>
        <span style="background: #f5f0eb; color: #5a5450; padding: 0.25rem 0.6rem; border-radius: 20px; font-size: 0.8rem;">Livraison #{{ livraison.id }}</span>
    </div>
    <form action="{{ path('app_suivi_livraison_note', {'id': livraison.id}) }}" method="POST">
        <div style="text-align: center; margin-bottom: 1rem;">
            <label style="display: block; font-size: 0.8rem; color: #666; margin-bottom: 0.5rem;">Votre appr√©ciation</label>
            <div style="display: flex; flex-direction: row-reverse; justify-content: center; font-size: 2rem; gap: 0.25rem;">
                {% for i in 1..5 %}
                <input type="radio" id="star{{ i }}" name="note" value="{{ i }}" required />
                <label for="star{{ i }}" title="{{ i }} √©toiles" style="cursor: pointer; color: #eee;">‚òÖ</label>
                {% endfor %}
            </div>
        </div>
        <button type="submit" style="width: 100%; padding: 0.75rem; background: #8b5e4a; color: white; border: none; border-radius: 50px; font-weight: 600; cursor: pointer;">Enregistrer la note</button>
    </form>
    <p style="margin-top: 1rem; text-align: center;"><a href="{{ path('app_livraison_show', {'id': livraison.id}) }}" style="color: #8b5e4a; text-decoration: none;">‚Üê Annuler et retourner</a></p>
</section>
{% endblock %}
