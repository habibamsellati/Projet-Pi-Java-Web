{% extends 'base.html.front.twig' %}

{% block title %}Mes réclamations - AfkArt{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Outfit', sans-serif; background-color: #faf6f1; color: #3d2817; }
        .reclamation-container { max-width: 1000px; margin: 0 auto; padding: 2rem 1.5rem; }
        .page-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem; }
        .page-title { font-family: 'Cormorant Garamond', serif; font-size: 2.5rem; color: #8b5e4a; margin: 0; }
        .btn-new { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: #2d7a4f; color: white; border-radius: 8px; font-weight: 600; text-decoration: none; transition: background 0.2s; }
        .btn-new:hover { background: #236b42; color: white; }
        .reclamation-list { display: flex; flex-direction: column; gap: 1rem; }
        .reclamation-card { background: white; border-radius: 12px; padding: 1.5rem; box-shadow: 0 2px 12px rgba(0,0,0,0.08); border-left: 4px solid #8b5e4a; transition: transform 0.2s, box-shadow 0.2s; }
        .reclamation-card:hover { transform: translateY(-2px); box-shadow: 0 4px 16px rgba(0,0,0,0.12); }
        .reclamation-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem; }
        .reclamation-title { font-size: 1.25rem; font-weight: 600; color: #3d2817; margin: 0 0 0.5rem 0; }
        .reclamation-meta { font-size: 0.875rem; color: #7a6e68; }
        .statut-badge { display: inline-block; padding: 0.35rem 0.75rem; border-radius: 20px; font-size: 0.8rem; font-weight: 500; }
        .statut-en_attente { background: #fff3cd; color: #856404; }
        .statut-en_cours { background: #cfe2ff; color: #084298; }
        .statut-repondue { background: #d1e7dd; color: #0f5132; }
        .statut-validee { background: #d1e7dd; color: #0f5132; }
        .statut-rejetee { background: #f8d7da; color: #842029; }
        .reclamation-description { color: #4d4d4d; margin-top: 0.75rem; line-height: 1.6; }
        .reclamation-actions { display: flex; gap: 0.5rem; margin-top: 1rem; flex-wrap: wrap; }
        .btn-action { display: inline-flex; align-items: center; gap: 0.4rem; padding: 0.5rem 1rem; border-radius: 8px; font-size: 0.875rem; font-weight: 500; text-decoration: none; transition: all 0.2s; border: none; cursor: pointer; }
        .btn-view { background: #8b5e4a; color: white; }
        .btn-view:hover { background: #6b4535; }
        .btn-edit { background: #b8956a; color: white; }
        .btn-edit:hover { background: #9a7a50; }
        .btn-delete { background: #d9534f; color: white; }
        .btn-delete:hover { background: #c9302c; }
        .empty-state { text-align: center; padding: 3rem; color: #7a6e68; background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); }
        .alert { padding: 12px 16px; border-radius: 8px; margin-bottom: 1rem; }
        .alert-success { background: #d4edda; color: #155724; }
        .alert-error { background: #f8d7da; color: #721c24; }
        .filters-section { background: white; padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem; box-shadow: 0 2px 12px rgba(0,0,0,0.08); display: flex; gap: 1rem; flex-wrap: wrap; align-items: center; }
        .search-box { flex: 1; min-width: 250px; }
        .search-box input { width: 100%; padding: 0.75rem 1rem; border: 1px solid #e0d5ca; border-radius: 8px; font-size: 0.95rem; font-family: inherit; }
        .search-box input:focus { outline: none; border-color: #8b5e4a; box-shadow: 0 0 0 3px rgba(139, 94, 74, 0.1); }
        .filter-group { display: flex; gap: 1rem; flex-wrap: wrap; }
        .filter-group select { padding: 0.75rem 1rem; border: 1px solid #e0d5ca; border-radius: 8px; font-size: 0.95rem; font-family: inherit; background-color: white; cursor: pointer; }
        .filter-group select:focus { outline: none; border-color: #8b5e4a; box-shadow: 0 0 0 3px rgba(139, 94, 74, 0.1); }
    </style>
{% endblock %}

{% block body %}
<div class="reclamation-container">
    <div class="page-header">
        <h1 class="page-title">Mes réclamations</h1>
        <a href="{{ path('app_reclamation_new') }}" class="btn-new">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
            Nouvelle réclamation
        </a>
    </div>

    {% for message in app.flashes('success') %}<div class="alert alert-success" role="status">{{ message }}</div>{% endfor %}
    {% for message in app.flashes('error') %}<div class="alert alert-error" role="alert">{{ message }}</div>{% endfor %}

    <div class="filters-section">
        <form method="GET" action="{{ path('app_reclamation_index') }}" class="search-box" style="display: flex;">
            <input type="text" name="recherche" value="{{ filters.recherche|default('') }}" placeholder="Rechercher par titre ou description...">
            <button type="submit" style="margin-left: 0.5rem; padding: 0.5rem 1rem; background: #8b5e4a; color: white; border: none; border-radius: 8px; cursor: pointer;">Rechercher</button>
        </form>
        <form method="GET" action="{{ path('app_reclamation_index') }}" class="filter-group" style="display: flex; align-items: center; gap: 0.5rem;">
            <input type="hidden" name="recherche" value="{{ filters.recherche|default('') }}">
            <select name="statut" onchange="this.form.submit()">
                <option value="">Tous les statuts</option>
                <option value="en_attente" {% if filters.statut == 'en_attente' %}selected{% endif %}>En attente</option>
                <option value="en_cours" {% if filters.statut == 'en_cours' %}selected{% endif %}>En cours</option>
                <option value="repondue" {% if filters.statut == 'repondue' %}selected{% endif %}>Répondue</option>
                <option value="validee" {% if filters.statut == 'validee' %}selected{% endif %}>Validée</option>
                <option value="rejetee" {% if filters.statut == 'rejetee' %}selected{% endif %}>Rejetée</option>
            </select>
            <select name="tri" onchange="this.form.submit()">
                <option value="date_desc" {% if filters.tri == 'date_desc' %}selected{% endif %}>Date (récentes)</option>
                <option value="date_asc" {% if filters.tri == 'date_asc' %}selected{% endif %}>Date (anciennes)</option>
                <option value="titre_asc" {% if filters.tri == 'titre_asc' %}selected{% endif %}>Titre (A-Z)</option>
                <option value="titre_desc" {% if filters.tri == 'titre_desc' %}selected{% endif %}>Titre (Z-A)</option>
            </select>
        </form>
    </div>

    {% if reclamations|length > 0 %}
        <div class="reclamation-list">
            {% for reclamation in reclamations %}
                <div class="reclamation-card">
                    <div class="reclamation-header">
                        <div>
                            <h3 class="reclamation-title">{{ reclamation.titre }}</h3>
                            <div class="reclamation-meta">{{ reclamation.datecreation ? reclamation.datecreation|date('d/m/Y à H:i') : 'Date non disponible' }}</div>
                        </div>
                        <span class="statut-badge statut-{{ reclamation.statut|replace({'_': '-'}) }}">
                            {% if reclamation.statut == 'en_attente' %}En attente
                            {% elseif reclamation.statut == 'en_cours' %}En cours de traitement
                            {% elseif reclamation.statut == 'repondue' %}Répondue
                            {% elseif reclamation.statut == 'validee' %}Validée
                            {% elseif reclamation.statut == 'rejetee' %}Rejetée
                            {% else %}{{ reclamation.statut }}{% endif %}
                        </span>
                    </div>
                    {% if reclamation.descripition %}
                        <div class="reclamation-description">{{ reclamation.descripition|nl2br }}</div>
                    {% endif %}
                    <div class="reclamation-actions">
                        <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn-action btn-view" title="Voir les détails">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                            Voir
                        </a>
                        {% if reclamation.statut == 'en_attente' %}
                            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn-action btn-edit" title="Modifier la réclamation">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                                Modifier
                            </a>
                            <form method="POST" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button type="submit" class="btn-action btn-delete" title="Supprimer la réclamation">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
                                    Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p style="font-size: 1.125rem; margin-bottom: 1rem;">Vous n'avez aucune réclamation pour le moment.</p>
            <a href="{{ path('app_reclamation_new') }}" class="btn-new">Créer une réclamation</a>
        </div>
    {% endif %}
</div>
{% endblock %}
