{% extends 'base.html.twig' %}

{% block title %}Export Propositions{% endblock %}

{% block navbar %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #000; padding-bottom: 20px; margin-bottom: 30px;">
        <div>
            <h1 style="margin: 0; text-transform: uppercase; letter-spacing: 2px;">AfkArt</h1>
            <p style="color: #666; margin: 5px 0 0;">Rapport des Propositions de Recyclage</p>
        </div>
        <div style="text-align: right;">
            <p style="margin: 0; font-weight: bold;">Date: {{ "now"|date("d/m/Y") }}</p>
            <p style="margin: 5px 0 0; color: #666;">Total propositions: {{ propositions|length }}</p>
        </div>
    </div>

    <table class="table table-bordered">
        <thead style="background-color: #f8f9fa;">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Produit associé</th>
                <th>État du produit</th>
                <th>Date</th>
                <th>ID Utilisateur</th>
            </tr>
        </thead>
        <tbody>
            {% for proposition in propositions %}
            <tr>
                <td style="font-weight: bold;">{{ proposition.titre }}</td>
                <td style="font-size: 0.9em;">{{ proposition.description }}</td>
                <td>{{ proposition.produit ? proposition.produit.nomproduit : 'N/A' }}</td>
                <td>{{ proposition.produit ? proposition.produit.etat : 'N/A' }}</td>
                <td>{{ proposition.date ? proposition.date|date('d/m/Y') : '-' }}</td>
                <td>{{ proposition.iduser }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div style="margin-top: 50px; border-top: 1px solid #eee; padding-top: 20px; text-align: center; color: #999; font-size: 0.8em;">
        <p>Ce document est un export automatique du système de gestion AfkArt.</p>
    </div>
</div>

<style>
    table { width: 100%; border-collapse: collapse; margin-bottom: 1rem; color: #212529; }
    th, td { padding: 0.75rem; vertical-align: top; border: 1px solid #dee2e6; }
    th { text-align: inherit; }
</style>
{% endblock %}
