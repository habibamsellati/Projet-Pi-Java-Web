<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnDesc = document.getElementById('magic-description');
    const btnPrice = document.getElementById('magic-pricing');
    
    // Selecteurs pour les champs Symfony (ID auto-g√©n√©r√©s par d√©faut : evenement_nom, etc.)
    const nomInput = document.querySelector('[id$="_nom"]');
    const typeInput = document.querySelector('[id$="_typeArt"]');
    const themeInput = document.querySelector('[id$="_theme"]');
    const descInput = document.querySelector('[id$="_description"]');
    const priceInput = document.querySelector('[id$="_prix"]');
    const capInput = document.querySelector('[id$="_capacite"]');

    btnDesc.addEventListener('click', async () => {
        if (!nomInput.value) {
            alert("Donnez d'abord un titre √† votre ≈ìuvre !");
            return;
        }

        const icon = document.getElementById('magic-desc-icon');
        icon.innerText = '‚åõ';
        btnDesc.style.opacity = '0.7';

        try {
            const response = await fetch('/api/ai/copilot', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    action: 'generate_description',
                    title: nomInput.value,
                    typeArt: typeInput.value,
                    theme: themeInput.value
                })
            });

            if (!response.ok) {
                const errData = await response.json();
                throw new Error(errData.error || `Erreur PHP ${response.status}`);
            }

            const data = await response.json();
            
            if (data.response) {
                descInput.value = "";
                let i = 0;
                const text = data.response;
                const speed = 15;
                function type() {
                    if (i < text.length) {
                        descInput.value += text.charAt(i);
                        i++;
                        setTimeout(type, speed);
                    }
                }
                type();
            }
        } catch (e) {
            console.error("Copilot Error:", e);
            alert("Assistant indisponible : " + e.message + "\n\n(V√©rifiez que votre HUGGINGFACE_API_TOKEN est valide dans le .env)");
        } finally {
            icon.innerText = '‚ú®';
            btnDesc.style.opacity = '1';
        }
    });

    btnPrice.addEventListener('click', async () => {
        const icon = document.getElementById('magic-price-icon');
        icon.innerText = '‚åõ';

        try {
            const response = await fetch('/api/ai/copilot', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    action: 'suggest_pricing',
                    typeArt: typeInput.value,
                    theme: themeInput.value
                })
            });
            const data = await response.json();
            
            if (data.prix) {
                // Animation de changement de valeur
                priceInput.value = data.prix;
                capInput.value = data.capacite;
                
                const reasonDiv = document.getElementById('pricing-reason');
                reasonDiv.innerText = "üí° " + (data.raison || data.motivation);
                reasonDiv.style.display = 'block';
            }
        } catch (e) {
            console.error(e);
        } finally {
            icon.innerText = 'üìä';
        }
    });
});
</script>
