{% extends 'base.html.front.twig' %}

{% block title %}Explorez nos √âv√©nements - AfkArt{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'components/_ai_concierge.html.twig' %}
{% endblock %}

{% block body %}
<div style="background: #FAF9F6; min-height: 100vh; padding-top: 120px; padding-bottom: 80px;">
    <div class="container">
        
        {# Professional Header Section #}
        <div style="margin-bottom: 60px; text-align: center;">
            <h6 style="color: #C4704B; text-transform: uppercase; letter-spacing: 4px; font-weight: 700; font-size: 0.85rem; margin-bottom: 20px;">L'Excellence Artisanale</h6>
            <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 4rem; color: #2b2b2b; margin: 0; line-height: 1.1;">
                S'inspirer de nos <br><span style="color: #C4704B;">√âv√©nements</span>
            </h1>
            <div style="width: 80px; height: 3px; background: #C4704B; margin: 30px auto;"></div>
            <p style="color: #666; font-size: 1.15rem; max-width: 650px; margin: 0 auto 30px auto; line-height: 1.8; font-family: 'Outfit', sans-serif;">
                D√©couvrez une s√©lection exclusive d'√©v√©nements cr√©√©s par nos artisans passionn√©s. R√©servez votre place pour une exp√©rience immersive.
            </p>
            {% if app.user and app.user.role == 'CLIENT' %}
                <a href="{{ path('app_reservation_index') }}" style="display: inline-flex; align-items: center; gap: 10px; background: white; color: #2b2b2b; padding: 15px 35px; border-radius: 50px; text-decoration: none; font-weight: 700; font-size: 0.95rem; border: 1px solid #EEE; box-shadow: 0 10px 30px rgba(0,0,0,0.03); transition: all 0.3s;" onmouseover="this.style.background='#2b2b2b'; this.style.color='white'; this.style.borderColor='#2b2b2b';" onmouseout="this.style.background='white'; this.style.color='#2b2b2b'; this.style.borderColor='#EEE';">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg>
                    Voir Mes R√©servations
                </a>
            {% endif %}
        </div>

        {# Grid of Events #}
        {% if evenements is empty %}
            <div style="background: white; border-radius: 40px; padding: 120px 50px; text-align: center; border: 1px solid rgba(0,0,0,0.05); box-shadow: 0 20px 60px rgba(0,0,0,0.02);">
                <div style="font-size: 4rem; margin-bottom: 30px; opacity: 0.5;">üé®</div>
                <h3 style="font-family: 'Cormorant Garamond', serif; font-size: 2.2rem; color: #2b2b2b; margin-bottom: 15px;">Aucune exposition pour le moment</h3>
                <p style="color: #888; font-size: 1.1rem; max-width: 400px; margin: 0 auto;">Revenez tr√®s bient√¥t pour d√©couvrir les nouvelles cr√©ations de nos artisans.</p>
            </div>
        {% else %}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(380px, 1fr)); gap: 40px;">
                {% for evenement in evenements %}
                    <div class="elegant-event-card" style="background: white; border-radius: 30px; overflow: hidden; box-shadow: 0 10px 40px rgba(0,0,0,0.03); border: 1px solid rgba(0,0,0,0.04); transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1); display: flex; flex-direction: column;">
                        
                        {# Card View Header #}
                        <div style="position: relative; height: 280px; overflow: hidden;">
                            {% if evenement.image %}
                                <img src="{{ evenement.image }}" alt="{{ evenement.nom }}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.8s ease;">
                            {% else %}
                                <div style="width: 100%; height: 100%; background: #F5F5F3; display: flex; align-items: center; justify-content: center; color: #BBB;">
                                    <span style="font-family: 'Cormorant Garamond', serif; letter-spacing: 2px;">AfkArt Collection</span>
                                </div>
                            {% endif %}
                            
                            {# Category Tag #}
                            <div style="position: absolute; top: 25px; left: 25px;">
                                <span style="background: rgba(255,255,255,0.9); backdrop-filter: blur(10px); color: #C4704B; padding: 8px 18px; border-radius: 50px; font-size: 0.75rem; font-weight: 800; text-transform: uppercase; letter-spacing: 1px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                                    {{ evenement.typeArt }}
                                </span>
                            </div>

                            {# Price Tag #}
                            <div style="position: absolute; bottom: 25px; right: 25px; background: #C4704B; color: white; padding: 10px 20px; border-radius: 15px; font-weight: 700; box-shadow: 0 10px 20px rgba(196, 112, 75, 0.2);">
                                {{ evenement.prix|number_format(0, ',', ' ') }} TND
                            </div>
                        </div>

                        {# Card Body #}
                        <div style="padding: 35px; flex: 1; display: flex; flex-direction: column;">
                            <div style="color: #888; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 12px; display: flex; align-items: center; gap: 8px;">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                                {{ evenement.lieu }}
                            </div>
                            
                            <h3 style="font-family: 'Cormorant Garamond', serif; font-size: 2.1rem; margin: 0 0 20px 0; color: #2b2b2b; line-height: 1.2;">{{ evenement.nom }}</h3>
                            
                            <p style="color: #666; font-size: 1rem; line-height: 1.7; margin-bottom: 30px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; flex: 1;">
                                {{ evenement.description }}
                            </p>

                            <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 25px; border-top: 1px solid #F5F5F3;">
                                <div style="display: flex; flex-direction: column;">
                                    <span style="font-size: 0.75rem; color: #888; text-transform: uppercase; font-weight: 600;">Date</span>
                                    <span style="color: #2b2b2b; font-weight: 700; font-size: 0.95rem;">{{ evenement.dateDebut|date('d M Y') }}</span>
                                </div>
                                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn-discover" style="background: #2b2b2b; color: white; padding: 14px 30px; border-radius: 50px; text-decoration: none; font-weight: 700; font-size: 0.9rem; transition: all 0.3s; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                                    D√©couvrir
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<style>
    .elegant-event-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 30px 60px rgba(0,0,0,0.08) !important;
        border-color: rgba(196, 112, 75, 0.1) !important;
    }
    .elegant-event-card:hover img {
        transform: scale(1.1);
    }
    .btn-discover:hover {
        background: #C4704B !important;
        transform: translateX(5px);
        box-shadow: 0 8px 20px rgba(196, 112, 75, 0.2) !important;
    }
</style>
{% endblock %}