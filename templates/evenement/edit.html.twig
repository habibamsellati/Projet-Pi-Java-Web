{% extends 'base.html.front.twig' %}

{% block title %}Modifier {{ evenement.nom }} - AfkArt{% endblock %}

{% block body %}
<div style="background: #FAF9F6; min-height: 100vh; padding-top: 120px; padding-bottom: 100px;">
    <div class="container" style="max-width: 850px;">
        
        <div style="text-align: center; margin-bottom: 50px;">
            <h6 style="color: #5c4a3d; text-transform: uppercase; letter-spacing: 4px; font-weight: 700; font-size: 0.8rem; margin-bottom: 20px;">Raffinement de l'Œuvre</h6>
            <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 4rem; color: #2b2b2b; margin: 0 0 20px 0; line-height: 1.1;">
                Perfectionner <span style="color: #C4704B;">{{ evenement.nom }}</span>
            </h1>
            <p style="color: #666; font-size: 1.15rem; max-width: 600px; margin: 0 auto; line-height: 1.7;">
                Chaque détail compte dans une expérience artistique. Ajustez votre vision pour qu'elle soit parfaite.
            </p>
        </div>

        {% if evenement.image %}
            <div style="margin-bottom: 40px; border-radius: 25px; overflow: hidden; box-shadow: 0 15px 40px rgba(0,0,0,0.1); border: 4px solid white;">
                <img src="{{ evenement.image }}" alt="{{ evenement.nom }}" style="width: 100%; height: 320px; object-fit: cover;">
            </div>
        {% endif %}

        {{ include('evenement/_form.html.twig', {'button_label': 'Confirmer les Modifications'}) }}
        
        <div style="text-align: center; margin-top: 40px;">
            <a href="{{ path('app_artisan_events') }}" style="color: #888; text-decoration: none; font-weight: 500; font-size: 0.9rem; display: flex; align-items: center; justify-content: center; gap: 8px;">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
                Retour à la gestion
            </a>
        </div>

    </div>
</div>
{% endblock %}
