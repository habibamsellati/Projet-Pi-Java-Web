{# templates/components/smartfill_widget.html.twig #}
<div class="sf-cognitive-card" style="background: white; border-radius: 24px; padding: 25px; border: 1px solid rgba(196, 112, 75, 0.1); box-shadow: 0 10px 40px rgba(0,0,0,0.03); margin-top: 15px; font-family: 'Outfit', sans-serif;">
    
    {# Header #}
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 25px; border-bottom: 1px solid #f8f8f8; padding-bottom: 15px;">
        <div style="display: flex; align-items: center; gap: 12px;">
            <div style="width: 38px; height: 38px; background: linear-gradient(135deg, #C4704B, #8B4513); border-radius: 12px; display: flex; align-items: center; justify-content: center; box-shadow: 0 5px 15px rgba(196, 112, 75, 0.2);">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
            </div>
            <div>
                <div style="font-weight: 800; color: #2b2b2b; font-size: 0.95rem; letter-spacing: 0.5px;">AFKART <span style="color: #C4704B;">COGNITIVE</span></div>
                <div style="font-size: 0.7rem; color: #888; font-weight: 600; text-transform: uppercase;">Professional Business Intelligence</div>
            </div>
        </div>
        {% if brief is defined and brief|length > 0 %}
            <div style="display: flex; gap: 6px;">
                {% for tag in brief %}
                    <span style="background: #f0f4f8; color: #476684; font-size: 0.65rem; padding: 4px 10px; border-radius: 6px; font-weight: 700;">{{ tag }}</span>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {% if prediction is null %}
        <div style="text-align: center; padding: 30px 0; background: #fafafa; border-radius: 15px;">
            <div style="color: #888; font-size: 0.85rem;">Phase d'apprentissage en cours...</div>
        </div>
    {% else %}
        <div style="display: grid; grid-template-columns: 1fr 1.5fr; gap: 30px;">
            
            {# Left: Score & Insights #}
            <div>
                <div style="text-align: center; margin-bottom: 20px;">
                    <div style="position: relative; width: 100px; height: 100px; margin: 0 auto;">
                        <svg viewBox="0 0 36 36" style="transform: rotate(-90deg); width: 100%; height: 100%;">
                            <circle cx="18" cy="18" r="16" fill="none" stroke="#f0f0f0" stroke-width="3"></circle>
                            <circle cx="18" cy="18" r="16" fill="none" stroke="{% if successScore > 80 %}#10b981{% elseif successScore > 50 %}#f59e0b{% else %}#ef4444{% endif %}" 
                                    stroke-width="3" stroke-dasharray="{{ successScore }}, 100" stroke-linecap="round" 
                                    style="transition: stroke-dasharray 1.5s cubic-bezier(0.4, 0, 0.2, 1);"></circle>
                        </svg>
                        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
                            <div style="font-weight: 800; font-size: 1.5rem; color: #2b2b2b; line-height: 1;">{{ successScore }}</div>
                            <div style="font-size: 0.6rem; color: #888; text-transform: uppercase; font-weight: 700;">Score</div>
                        </div>
                    </div>
                </div>
                <div style="text-align: center;">
                    <div style="font-weight: 700; color: #2b2b2b; font-size: 0.9rem; margin-bottom: 5px;">{{ insights.message }}</div>
                    <div style="font-size: 0.75rem; color: #666; line-height: 1.4;">{{ insights.action }}</div>
                </div>
            </div>

            {# Right: Elasticity Simulation #}
            <div style="background: #faf9f6; border-radius: 15px; padding: 15px; border: 1px solid rgba(0,0,0,0.02);">
                <div style="font-size: 0.75rem; font-weight: 700; color: #2b2b2b; margin-bottom: 12px; display: flex; align-items: center; gap: 8px;">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#C4704B" stroke-width="2.5"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                    Simulateur de Prix
                </div>
                <div style="display: flex; flex-direction: column; gap: 8px;">
                    {% set simulation = elasticity %}
                    <div class="sim-row" style="display: flex; justify-content: space-between; align-items: center; font-size: 0.8rem; padding: 5px 0;">
                        <span style="color: #666;">Prix -20%</span>
                        <span style="font-weight: 700; color: #10b981;">{{ simulation.decrease_20|round }}% occ.</span>
                    </div>
                    <div class="sim-row" style="display: flex; justify-content: space-between; align-items: center; font-size: 0.8rem; padding: 5px 0; background: white; border-radius: 6px; padding: 6px 10px; margin: 0 -5px;">
                        <span style="color: #2b2b2b; font-weight: 600;">Prix Actuel</span>
                        <span style="font-weight: 800; color: #2b2b2b;">{{ simulation.current|round }}% occ.</span>
                    </div>
                    <div class="sim-row" style="display: flex; justify-content: space-between; align-items: center; font-size: 0.8rem; padding: 5px 0;">
                        <span style="color: #666;">Prix +10%</span>
                        <span style="font-weight: 700; color: #f59e0b;">{{ simulation.increase_10|round }}% occ.</span>
                    </div>
                </div>
                <div style="margin-top: 15px; font-size: 0.65rem; color: #aaa; font-style: italic; text-align: center;">
                    Simulation basée sur l'intérêt historique
                </div>
            </div>
        </div>

        {# Strategy Button #}
        <div style="margin-top: 30px; border-top: 1px dashed #f0f0f0; padding-top: 20px; text-align: center;">
            <a href="{{ path('app_evenement_ai_strategy', {'id': evenement.id}) }}" 
               style="display: inline-flex; align-items: center; gap: 10px; background: #2b2b2b; color: white; text-decoration: none; padding: 12px 25px; border-radius: 12px; font-weight: 700; font-size: 0.85rem; transition: all 0.3s ease; box-shadow: 0 10px 20px rgba(0,0,0,0.1);"
               onmouseover="this.style.background='#C4704B'; this.style.transform='translateY(-2px)';"
               onmouseout="this.style.background='#2b2b2b'; this.style.transform='translateY(0)';"
            >
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
                Exploration Stratégique Détailée
            </a>
        </div>
    {% endif %}
</div>

<style>
    .sf-cognitive-card { transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); }
    .sf-cognitive-card:hover { border-color: rgba(196, 112, 75, 0.3) !important; transform: translateY(-5px); box-shadow: 0 15px 45px rgba(0,0,0,0.06) !important; }
    .sim-row { border-bottom: 1px solid rgba(0,0,0,0.03); }
    .sim-row:last-child { border-bottom: none; }
</style>
