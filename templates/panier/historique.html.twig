{% extends 'base.html.front.twig' %}

{% block title %}Historique des commandes - AfkArt{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .historique-container { max-width: 980px; margin: 0 auto; padding: 2rem 1.5rem; }
        .page-title { font-family: 'Cormorant Garamond', serif; font-size: 2.2rem; color: #8b5e4a; margin-bottom: 1rem; }
        .back-link { display: inline-flex; align-items: center; gap: 0.5rem; color: #8b5e4a; text-decoration: none; margin-bottom: 1.5rem; font-weight: 500; }
        .back-link:hover { text-decoration: underline; }
        .commandes-list { display: grid; gap: 1rem; }
        .commande-card { background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); padding: 1.2rem; }
        .commande-head { display: flex; justify-content: space-between; gap: 1rem; align-items: center; flex-wrap: wrap; margin-bottom: 0.8rem; }
        .commande-id { font-weight: 700; color: #3d2817; }
        .commande-meta { color: #7a6e68; font-size: 0.92rem; }
        .statut { display: inline-flex; padding: 0.22rem 0.65rem; border-radius: 999px; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; }
        .statut--en_attente { background: #fff3cd; color: #856404; }
        .statut--valide { background: #d4edda; color: #155724; }
        .statut--invalide { background: #f8d7da; color: #721c24; }
        .articles { margin: 0; padding-left: 1.2rem; color: #493327; }
        .articles li { margin-bottom: 0.3rem; }
        .commande-footer { margin-top: 0.9rem; padding-top: 0.8rem; border-top: 1px solid #eee; display: flex; justify-content: space-between; gap: 1rem; flex-wrap: wrap; font-weight: 600; }
        .empty { background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); padding: 2rem; text-align: center; color: #7a6e68; }
        .alert { padding: 12px 16px; border-radius: 8px; margin-bottom: 1rem; }
        .alert-success { background: #d4edda; color: #155724; }
        .alert-error { background: #f8d7da; color: #721c24; }
    </style>
{% endblock %}

{% block body %}
<div class="historique-container">
    <a href="{{ path('app_panier_index') }}" class="back-link">Retour au panier</a>
    <h1 class="page-title">Historique des commandes</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="status">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error" role="alert">{{ message }}</div>
    {% endfor %}

    {% if commandes|length > 0 %}
        <section class="commandes-list" aria-label="Historique des commandes client">
            {% for commande in commandes %}
                <article class="commande-card">
                    <div class="commande-head">
                        <div>
                            <div class="commande-id">Commande #{{ commande.id }}</div>
                            <div class="commande-meta">
                                {{ commande.datecommande ? commande.datecommande|date('d/m/Y H:i') : '-' }} - Tel: {{ commande.numero ?: '-' }}
                            </div>
                        </div>
                        <span class="statut statut--{{ commande.statut }}">{{ commande.statut|replace({'_': ' '}) }}</span>
                    </div>

                    <ul class="articles">
                        {% for article in commande.articles %}
                            <li>
                                {{ article.titre }}
                                {% if article.prix is not null and article.prix != '' %}
                                    - {{ article.prix }} DT
                                {% endif %}
                            </li>
                        {% else %}
                            <li>Aucun article</li>
                        {% endfor %}
                    </ul>

                    <div class="commande-footer">
                        <span>Adresse: {{ commande.adresselivraison }}</span>
                        <span>Total: {{ commande.total|number_format(2, ',', ' ') }} DT</span>
                    </div>
                </article>
            {% endfor %}
        </section>
    {% else %}
        <div class="empty">
            Vous n'avez pas encore passe de commande.
        </div>
    {% endif %}
</div>
{% endblock %}
