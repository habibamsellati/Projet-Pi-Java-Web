{% extends 'base.html.front.twig' %}

{% block title %}Mon panier - AfkArt{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .panier-container { max-width: 900px; margin: 0 auto; padding: 2rem 1.5rem; }
        .page-title { font-family: 'Cormorant Garamond', serif; font-size: 2.5rem; color: #8b5e4a; margin-bottom: 1.5rem; }
        .panier-list { background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); overflow: hidden; }
        .panier-item { display: flex; align-items: center; gap: 1.5rem; padding: 1.25rem 1.5rem; border-bottom: 1px solid #eee; }
        .panier-item:last-child { border-bottom: none; }
        .panier-item-image { width: 80px; height: 80px; object-fit: cover; border-radius: 8px; }
        .panier-item-placeholder { width: 80px; height: 80px; background: linear-gradient(135deg, #c9a17a, #a8935f); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; font-size: 0.75rem; }
        .panier-item-info { flex: 1; }
        .panier-item-titre { font-weight: 600; color: #3d2817; margin-bottom: 0.25rem; }
        .panier-item-meta { font-size: 0.875rem; color: #7a6e68; }
        .panier-item-prix { font-weight: 600; color: #8b5e4a; }
        .panier-item-actions { display: flex; gap: 0.5rem; align-items: center; }
        .panier-total { margin-top: 1.5rem; padding: 1.25rem 1.5rem; background: #f8f6f3; border-radius: 12px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; }
        .panier-total-label { font-weight: 600; font-size: 1.125rem; }
        .panier-total-montant { font-size: 1.5rem; font-weight: 700; color: #8b5e4a; }
        .btn-valider-panier { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: #2d7a4f; color: white; border-radius: 8px; font-weight: 600; text-decoration: none; transition: background 0.2s; }
        .btn-valider-panier:hover { background: #236b42; color: white; }
        .btn-panier { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; border-radius: 8px; font-size: 0.875rem; font-weight: 500; text-decoration: none; border: none; cursor: pointer; transition: all 0.2s; }
        .btn-voir { background: #8b5e4a; color: white; }
        .btn-voir:hover { background: #6b4535; }
        .btn-retirer { background: #f5f0eb; color: #8b5e4a; }
        .btn-retirer:hover { background: #e8dcc8; }
        .btn-historique { display: inline-flex; align-items: center; gap: 0.45rem; padding: 0.55rem 1rem; border-radius: 8px; background: #f1ece6; color: #5a3a2a; text-decoration: none; font-weight: 600; }
        .btn-historique:hover { background: #e4dbd2; color: #5a3a2a; }
        .top-actions { display: flex; justify-content: space-between; align-items: center; gap: 1rem; flex-wrap: wrap; }
        .panier-empty { text-align: center; padding: 3rem; color: #7a6e68; background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); }
        .panier-empty p { margin-bottom: 1.5rem; }
        .icon-trash { width: 18px; height: 18px; flex-shrink: 0; }
        .alert { padding: 12px 16px; border-radius: 8px; margin-bottom: 1rem; }
        .alert-success { background: #d4edda; color: #155724; }
        .alert-error { background: #f8d7da; color: #721c24; }
        .back-link { display: inline-flex; align-items: center; gap: 0.5rem; color: #8b5e4a; text-decoration: none; margin-bottom: 1.5rem; font-weight: 500; }
        .back-link:hover { text-decoration: underline; }
    </style>
{% endblock %}

{% block body %}
<div class="panier-container">
    <div class="top-actions">
        <a href="{{ path('app_article_index') }}" class="back-link" title="Retour a la liste des articles">Retour aux articles</a>
        <a href="{{ path('app_panier_historique') }}" class="btn-historique">Historique des commandes</a>
    </div>
    <h1 class="page-title">Mon panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="status">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error" role="alert">{{ message }}</div>
    {% endfor %}

    {% if articles|length > 0 %}
        <section class="panier-list" aria-label="Contenu du panier">
            {% for article in articles %}
                <div class="panier-item">
                    {% if article.image %}
                        <img src="{{ asset('image/' ~ article.image) }}" alt="{{ article.titre }}" class="panier-item-image">
                    {% else %}
                        <div class="panier-item-placeholder">Image</div>
                    {% endif %}
                    <div class="panier-item-info">
                        <div class="panier-item-titre">{{ article.titre }}</div>
                        <div class="panier-item-meta">
                            {% if article.artisan %}{{ article.artisan.prenom }} {{ article.artisan.nom }}{% endif %}
                            {% if article.date %} Â· {{ article.date|date('d/m/Y') }}{% endif %}
                        </div>
                        {% if article.prix is not null and article.prix != '' %}
                        <div class="panier-item-prix">{{ article.prix }} DT</div>
                        {% endif %}
                    </div>
                    <div class="panier-item-actions">
                        <a href="{{ path('app_article_show', { id: article.id }) }}" class="btn-panier btn-voir">Voir</a>
                        <form method="post" action="{{ path('app_panier_retirer', { id: article.id }) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('panier_retirer' ~ article.id) }}">
                            <button type="submit" class="btn-panier btn-retirer" title="Retirer du panier">
                                <svg class="icon-trash" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
                                Retirer
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </section>
        <div class="panier-total">
            <span class="panier-total-label">Total</span>
            <span class="panier-total-montant">{{ total|number_format(2, ',', ' ') }} DT</span>
            <a href="{{ path('app_panier_valider') }}" class="btn-valider-panier">Valider le panier</a>
        </div>
    {% else %}
        <div class="panier-empty">
            <p>Votre panier est vide.</p>
            <a href="{{ path('app_article_index') }}" class="btn-panier btn-voir">Voir les articles</a>
        </div>
    {% endif %}
</div>
{% endblock %}
