{% extends 'base.html.front.twig' %}

{% block title %}Inscription - AfkArt{% endblock %}

{% block body %}
<style>
  :root {
    --color-cream: #FAF7F2;
    --color-cream-dark: #F5F0E8;
    --color-terracotta: #C4704B;
    --color-terracotta-dark: #A85D3B;
    --color-sage: #8FAE8B;
    --color-sage-light: #B8D4B4;
    --color-brown: #3D3229;
    --color-brown-light: #5C4A3D;
  }
  
  * { margin: 0; padding: 0; box-sizing: border-box; }
  
  body {
    font-family: 'Outfit', system-ui, sans-serif;
    background-color: var(--color-cream);
    color: var(--color-brown);
    line-height: 1.6;
  }
  
  h1, h2 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-weight: 500;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .form-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .form-card {
    background: white;
    border-radius: 1.5rem;
    padding: 2.5rem;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 450px;
  }
  
  .form-card h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-brown);
  }
  
  .form-card h1 span {
    color: var(--color-terracotta);
  }
  
  .form-description {
    color: var(--color-brown-light);
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.25rem;
    font-weight: 500;
    color: var(--color-brown);
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }
  
  .form-group label.valid-label {
    color: #166534 !important;
  }

  .error-message {
    color: #991b1b;
    font-size: 0.8rem;
    display: block;
    margin-bottom: 0.5rem;
    min-height: 1.2rem;
  }
  
  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #ddd;
    border-radius: 0.75rem;
    font-size: 0.95rem;
    font-family: inherit;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  
  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-terracotta);
    box-shadow: 0 0 0 3px rgba(196, 112, 75, 0.1);
  }

  .password-input-wrap {
    position: relative;
  }

  .password-input-wrap input {
    padding-right: 3rem;
  }

  .password-toggle {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    width: 2rem;
    height: 2rem;
    border-radius: 999px;
    border: 1px solid #e7ddd1;
    background: linear-gradient(135deg, #fff, #f7efe5);
    cursor: pointer;
    color: var(--color-terracotta);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
  }

  .password-toggle:hover {
    transform: translateY(-50%) scale(1.05);
    border-color: #d4b598;
    box-shadow: 0 6px 14px rgba(196, 112, 75, 0.2);
  }

  .password-toggle svg {
    width: 1rem;
    height: 1rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
    width: 100%;
  }
  
  .btn-primary {
    background: var(--color-terracotta);
    color: white;
  }
  
  .btn-primary:hover {
    background: var(--color-terracotta-dark);
  }
  
  .flash {
    padding: 1rem;
    border-radius: 0.75rem;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .flash.success {
    background-color: #d1fae5;
    color: #065f46;
    border: 1px solid #a7f3d0;
  }
  
  .flash.error {
    background-color: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
  }
  
  .form-footer {
    text-align: center;
    margin-top: 1.5rem;
    color: var(--color-brown-light);
    font-size: 0.95rem;
  }
  
  .form-footer a {
    color: var(--color-terracotta);
    text-decoration: none;
    font-weight: 500;
  }
  
  .form-footer a:hover {
    text-decoration: underline;
  }

  .avatar-preview {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    background: #f7f2eb;
    border: 1px solid #eadfd2;
    border-radius: 0.9rem;
    padding: 0.65rem 0.8rem;
    margin-top: 0.6rem;
  }

  .avatar-preview img {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 4px 14px rgba(61, 50, 41, 0.14);
    object-fit: cover;
  }

  .avatar-preview span {
    font-size: 0.86rem;
    color: var(--color-brown-light);
  }

  .turnstile-wrap {
    display: flex;
    justify-content: center;
    margin-bottom: 0.75rem;
  }


</style>

<div class="form-container">
  <div class="form-card">
    <h1>Créer un <span>compte</span></h1>
    <p class="form-description">Rejoignez AfkArt et découvrez l'art qui donne une seconde vie</p>
    
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="flash {{ label }}">{{ message }}</div>
      {% endfor %}
    {% endfor %}
    
    <form id="register-form" method="post" action="{{ path('app_register') }}" novalidate>
      <div class="form-group">
        <label for="nom" id="label-nom">Nom</label>
        <span class="error-message" id="error-nom">{{ errors.nom|default('') }}</span>
        <input type="text" id="nom" name="nom" value="{{ last_entered_data.nom|default('') }}" />
      </div>
      
      <div class="form-group">
        <label for="prenom" id="label-prenom">Prénom</label>
        <span class="error-message" id="error-prenom">{{ errors.prenom|default('') }}</span>
        <input type="text" id="prenom" name="prenom" value="{{ last_entered_data.prenom|default('') }}" />
      </div>
      
      <div class="form-group">
        <label for="email" id="label-email">Email</label>
        <span class="error-message" id="error-email">{{ errors.email|default('') }}</span>
        <input type="text" id="email" name="email" value="{{ last_entered_data.email|default('') }}" />
      </div>
      
      <div class="form-group">
        <label for="motdepasse" id="label-motdepasse">Mot de passe</label>
        <span class="error-message" id="error-motdepasse">{{ errors.motdepasse|default('') }}</span>
        <div class="password-input-wrap">
          <input type="password" id="motdepasse" name="motdepasse" />
          <button type="button" class="password-toggle" data-target="motdepasse" aria-label="Afficher le mot de passe">
            <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path class="eye-shape" d="M2 12s3.5-6 10-6 10 6 10 6-3.5 6-10 6-10-6-10-6Z" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.8"/>
            </svg>
          </button>
        </div>
      </div>
      
      <div class="form-group">
        <label for="sexe" id="label-sexe">Sexe</label>
        <span class="error-message" id="error-sexe">{{ errors.sexe|default('') }}</span>
        <select id="sexe" name="sexe">
          <option value="">Selectionnez</option>
          <option value="HOMME" {{ (last_entered_data.sexe|default('') == 'HOMME') ? 'selected' : '' }}>Homme</option>
          <option value="FEMME" {{ (last_entered_data.sexe|default('') == 'FEMME') ? 'selected' : '' }}>Femme</option>
          <option value="AUTRE" {{ (last_entered_data.sexe|default('') == 'AUTRE') ? 'selected' : '' }}>Autre</option>
        </select>
        <div class="avatar-preview">
          <img id="avatar-preview-img" src="{{ asset('uploads/avatars/default_autre.svg') }}" alt="Avatar genere">
          <span>L'avatar est genere automatiquement selon le sexe choisi.</span>
        </div>
      </div>
      
      <div class="form-group">
        <label for="role">Je suis</label>
        <select id="role" name="role">
          <option value="CLIENT" {{ (last_entered_data.role|default('') == 'CLIENT') ? 'selected' : '' }}>Un Client</option>
          <option value="ARTISANT" {{ (last_entered_data.role|default('') == 'ARTISANT') ? 'selected' : '' }}>Un Artisan</option>
          <option value="ADMIN" {{ (last_entered_data.role|default('') == 'ADMIN') ? 'selected' : '' }}>Un Administrateur</option>
          <option value="LIVREUR" {{ (last_entered_data.role|default('') == 'LIVREUR') ? 'selected' : '' }}>Un Livreur</option>
        </select>
      </div>

      {% if errors.captcha is defined and errors.captcha %}
        <span class="error-message" style="margin-bottom: 0.35rem; display: block;">{{ errors.captcha }}</span>
      {% endif %}

      {% if turnstile_site_key is defined and turnstile_site_key is not empty %}
        <div class="turnstile-wrap">
          <div
            id="turnstile-register"
            class="cf-turnstile"
            data-sitekey="{{ turnstile_site_key }}"
            data-theme="light"
            data-size="normal"
            data-language="fr"
            data-appearance="always"
          ></div>
        </div>
      {% endif %}
      
      <button type="submit" class="btn btn-primary">S'inscrire</button>
    </form>
    
    <div class="form-footer">
      Vous avez déjà un compte? <a href="{{ path('app_login') }}">Se connecter</a>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const inputs = {
      nom: document.getElementById('nom'),
      prenom: document.getElementById('prenom'),
      email: document.getElementById('email'),
      motdepasse: document.getElementById('motdepasse'),
      sexe: document.getElementById('sexe')
    };

    const validators = {
      nom: (val) => {
        if (!val) return "Le nom est obligatoire";
        if (val.length > 15) return "Max 15 caractères";
        if (!/^[a-zA-ZÀ-ÿ\s-]+$/.test(val)) return "Le nom ne doit contenir que des lettres";
        return null;
      },
      prenom: (val) => {
        if (!val) return "Le prénom est obligatoire";
        if (val.length > 30) return "Max 30 caractères";
        if (!/^[a-zA-ZÀ-ÿ\s-]+$/.test(val)) return "Le prénom ne doit contenir que des lettres";
        return null;
      },
      email: (val) => {
        if (!val) return "L'email est obligatoire";
        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(val)) return "Email invalide (ex: chaine@chaine.chaine)";
        return null;
      },
      motdepasse: (val) => {
        if (!val) return "Le mot de passe est obligatoire";
        if (!/(?=.*[A-Z])(?=.*\d)(?=.*[\W_])/.test(val)) return "Doit contenir Majuscule, Chiffre et Symbole";
        return null;
      },
      sexe: (val) => {
        if (!val) return "Le sexe est obligatoire";
        if (!['HOMME', 'FEMME', 'AUTRE'].includes(val)) return "Sexe invalide";
        return null;
      }
    };

    function validateField(id) {
      const input = inputs[id];
      const val = input.value;
      const errorMsg = validators[id](val);
      const label = document.getElementById('label-' + id);
      const errorSpan = document.getElementById('error-' + id);

      if (errorMsg === null) {
        label.classList.add('valid-label');
        errorSpan.textContent = "";
      } else {
        label.classList.remove('valid-label');
        errorSpan.textContent = errorMsg;
      }
    }

    Object.keys(inputs).forEach(id => {
      if (inputs[id]) {
        inputs[id].addEventListener('input', () => validateField(id));
        // Run initial validation if field has value (from server side repopulation)
        if (inputs[id].value) validateField(id);
      }
    });

    const avatarPreview = document.getElementById('avatar-preview-img');
    const sexeSelect = document.getElementById('sexe');
    function updateAvatarPreview() {
      if (!avatarPreview || !sexeSelect) return;
      const selected = (sexeSelect.value || '').toUpperCase();
      if (selected === 'HOMME') {
        avatarPreview.src = "{{ asset('uploads/avatars/default_homme.svg') }}";
      } else if (selected === 'FEMME') {
        avatarPreview.src = "{{ asset('uploads/avatars/default_femme.svg') }}";
      } else {
        avatarPreview.src = "{{ asset('uploads/avatars/default_autre.svg') }}";
      }
    }
    if (sexeSelect) {
      sexeSelect.addEventListener('change', updateAvatarPreview);
      updateAvatarPreview();
    }

    var toggles = document.querySelectorAll('.password-toggle');
    toggles.forEach(function (btn) {
      btn.addEventListener('click', function () {
        var targetId = btn.getAttribute('data-target');
        var input = document.getElementById(targetId);
        if (!input) return;
        var show = input.type === 'password';
        input.type = show ? 'text' : 'password';
        btn.setAttribute('aria-label', show ? 'Masquer le mot de passe' : 'Afficher le mot de passe');
        var eyeShape = btn.querySelector('.eye-shape');
        if (eyeShape) {
          eyeShape.setAttribute('d', show
            ? 'M3 3l18 18M2 12s3.5-6 10-6c2.2 0 4.1.7 5.7 1.7M22 12s-3.5 6-10 6c-2.2 0-4.1-.7-5.7-1.7'
            : 'M2 12s3.5-6 10-6 10 6 10 6-3.5 6-10 6-10-6-10-6Z');
        }
      });
    });

  });
</script>
{% if turnstile_site_key is defined and turnstile_site_key is not empty %}
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
{% endif %}
{% endblock %}
