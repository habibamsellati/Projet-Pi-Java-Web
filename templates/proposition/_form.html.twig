{# templates/proposition/_form.html.twig #}

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #c46210 0%, #8b4513 100%);">
        <h2 class="mb-0 fw-bold">{{ button_label|default('Enregistrer') == 'Update' ? 'Modifier la proposition' : 'Nouvelle Proposition' }}</h2>
        <p class="mb-0 mt-2 opacity-75">
            {{ button_label|default('Enregistrer') == 'Update' ? 'Mettre à jour les informations' : 'Créez une nouvelle proposition' }}
        </p>
    </div>

    <div class="card-body p-4 p-md-5">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="row g-4">
            <!-- Informations -->
            <div class="col-12">
                <h5 class="text-secondary border-bottom pb-2 mb-3"><i class="fas fa-info-circle me-2"></i>Détails de la proposition</h5>
            </div>

            <div class="col-12">
                <div class="form-floating mb-3">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control ' ~ (form.titre.vars.valid ? '' : 'is-invalid'), 'placeholder': 'Titre'}}) }}
                    {{ form_label(form.titre, 'Titre') }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.titre) }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating mb-3">
                    {{ form_widget(form.iduser, {'attr': {'class': 'form-control ' ~ (form.iduser.vars.valid ? '' : 'is-invalid'), 'placeholder': 'ID Utilisateur'}}) }}
                    {{ form_label(form.iduser, 'ID Utilisateur') }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.iduser) }}
                    </div>
                </div>
            </div>



            <div class="col-md-6">
                <div class="form-floating mb-3">
                    {{ form_widget(form.date, {'attr': {'class': 'form-control ' ~ (form.date.vars.valid ? '' : 'is-invalid'), 'placeholder': 'Date'}}) }}
                    {{ form_label(form.date, 'Date de création') }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.date) }}
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-floating mb-3">
                    {{ form_widget(form.produit, {'attr': {'class': 'form-select ' ~ (form.produit.vars.valid ? '' : 'is-invalid'), 'placeholder': 'Produit'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.produit) }}
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="col-12 mt-2">
                <div class="form-floating">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control ' ~ (form.description.vars.valid ? '' : 'is-invalid'), 'style': 'height: 150px', 'placeholder': 'Description'}}) }}
                    {{ form_label(form.description, 'Description détaillée') }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-5 pt-3 border-top">
            <a href="{{ path('app_proposition_index') }}" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                <i class="fas fa-arrow-left me-2"></i> Retour
            </a>

            <button type="submit" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow-sm" style="background: linear-gradient(135deg, #c46210 0%, #a04e0b 100%); border: none;">
                <i class="fas fa-save me-2"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>