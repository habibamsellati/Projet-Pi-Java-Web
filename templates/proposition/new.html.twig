{% extends 'base.html.twig' %}

{% block title %}Nouvelle Proposition{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h3 fw-bold mb-0">Créer une nouvelle proposition</h2>
                    <a href="{{ path('home') }}" class="btn btn-outline-secondary fw-bold px-3 py-1 text-uppercase rounded-pill" style="font-size: 0.8rem;">
                        <i class="fas fa-home me-2"></i>Retour au site
                    </a>
                </div>
                <div class="card shadow">
                    <div class="card-body">
                        {{ include('proposition/_form.html.twig', {
                            'button_label': 'Créer la proposition',
                            'form_title': 'Nouvelle Proposition'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}