{% extends 'base.html.twig' %}

{% block title %}Propositions - Afk Art{% endblock %}

{% block body %}

<div class="container py-5">
    <!-- En-tête -->
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="display-6 fw-bold mb-0 text-uppercase" style="border-bottom: 4px solid #c46210; display: inline-block; padding-bottom: 5px;">
            Nos Propositions
        </h1>
        
        <div class="d-flex gap-2">
            <a href="{{ path('home') }}" class="btn btn-outline-secondary fw-bold px-4 py-2 rounded-pill shadow-sm">
                <i class="fas fa-home me-2"></i>RETOUR AU SITE
            </a>
            <a href="{{ path('app_proposition_new') }}" 
            class="btn text-white fw-bold px-4 py-2 rounded-pill shadow-sm"
            style="background-color: #c46210; border: none;">
                CRÉER UNE NOUVELLE PROPOSITION
            </a>
        </div>
    </div>

    {% if propositions is empty %}
        <div class="text-center py-5 bg-light rounded">
            <h4 class="text-muted">Aucune proposition disponible pour le moment</h4>
        </div>
    {% else %}

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-black text-white">
                    <tr style="background-color: #000;">
                        <th class="py-3 px-4 text-uppercase fw-bold text-white bg-black">Titre</th>
                        <th class="py-3 text-uppercase fw-bold text-white bg-black">Description</th>
                        <th class="py-3 text-uppercase fw-bold text-white bg-black">Produit</th>
                        <th class="py-3 text-uppercase fw-bold text-white bg-black">Date</th>
                         <th class="py-3 text-uppercase fw-bold text-white bg-black">Utilisateur</th>
                        <th class="py-3 px-4 text-uppercase fw-bold text-end text-white bg-black" style="min-width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    {% for proposition in propositions %}
                        <tr>
                            <td class="px-4 fw-bold text-secondary">{{ proposition.titre }}</td>
                            <td>
                                {{ proposition.description|length > 50 ? proposition.description|slice(0, 50) ~ '...' : proposition.description }}
                            </td>
                            <td>
                                {% if proposition.produit %}
                                    <span class="badge bg-light text-dark border">{{ proposition.produit.nomproduit }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ proposition.date ? proposition.date|date('d/m/Y') : '-' }}</td>
                            <td><small class="text-muted">ID: {{ proposition.iduser }}</small></td>
                            <td class="px-4 text-end">
                                <div class="d-flex justify-content-end gap-3">
                                    <a href="{{ path('app_proposition_edit', {'id': proposition.id}) }}" class="text-decoration-none text-secondary d-flex flex-column align-items-center action-btn">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mb-1" style="width: 32px; height: 32px;">
                                            <i class="fas fa-pencil-alt"></i>
                                        </div>
                                        <span style="font-size: 10px; text-transform: uppercase;">Edit</span>
                                    </a>

                                    <form method="post" action="{{ path('app_proposition_delete', {'id': proposition.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline-block">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proposition.id) }}">
                                        <button class="btn btn-link text-decoration-none text-secondary p-0 d-flex flex-column align-items-center action-btn focus-none" style="border: none; background: none;">
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mb-1" style="width: 32px; height: 32px;">
                                                <i class="fas fa-times-circle"></i>
                                            </div>
                                            <span style="font-size: 10px; text-transform: uppercase;">Delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    {% endif %}
</div>

<style>
    .bg-black { background-color: #000 !important; }
    .action-btn:hover .rounded-circle { background-color: #e2e6ea !important; color: #000; }
    .action-btn:hover span { color: #000; font-weight: bold; }
    .focus-none:focus { box-shadow: none; }
</style>

{% endblock %}
