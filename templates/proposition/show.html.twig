{% extends 'base.html.front.twig' %}

{% block title %}Détail proposition | AfkArt{% endblock %}

{% block body %}
<section style="max-width: 700px; margin: 0 auto; padding: 2rem 1.5rem;">
    <div style="background: white; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); padding: 1.5rem;">
        <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 1.75rem; color: #3d2817; margin-bottom: 1rem;">{{ proposition.titre }}</h1>
        <p style="color: #666; margin-bottom: 1rem;">{{ proposition.description }}</p>
        <p style="color: #666;"><strong>Produit:</strong> {% if proposition.produit %}{{ proposition.produit.nomproduit }}{% else %}—{% endif %}</p>
        <p style="color: #666;"><strong>Date:</strong> {{ proposition.date ? proposition.date|date('d/m/Y H:i') : '—' }}</p>
        <p style="color: #666;"><strong>Utilisateur:</strong> {% if proposition.user %}{{ proposition.user.prenom }} {{ proposition.user.nom }}{% else %}—{% endif %}</p>
        <div style="margin-top: 1.5rem;">
            {% if can_manage|default(false) %}
            <a href="{{ path('app_proposition_edit', {'id': proposition.id}) }}" style="background: #8b5e4a; color: white; padding: 0.5rem 1rem; border-radius: 50px; text-decoration: none; margin-right: 0.5rem;">Modifier</a>
            {% endif %}
            <a href="{{ path('app_proposition_index') }}" style="color: #5a5450; text-decoration: none;">← Liste des propositions</a>
        </div>
    </div>
</section>
{% endblock %}
