{% extends 'base.html.twig' %}

{% block title %}Nouvelle Étape de Suivi | AfkArt{% endblock %}

{% block body %}
<header class="header">
    <div class="header-inner container">
        <a href="{{ path('home') }}" class="logo">Afk<span>Art</span></a>
        <nav class="nav">
            <a href="{{ path('app_livraison_index') }}">Livraisons</a>
            <a href="{{ path('app_suivi_livraison_index') }}">Suivis</a>
            <a href="#galerie">Galerie</a>
        </nav>
    </div>
</header>

<main class="page-wrapper">
