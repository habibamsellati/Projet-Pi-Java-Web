            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'styled-form'}}) }}
                
                <div class="info-group">
                    <label class="info-label">Livraison Concernée</label>
                    {{ form_widget(form.livraison, {'attr': {'class': 'form-input'}}) }}
                    <div class="form-error">{{ form_errors(form.livraison) }}</div>
                </div>

                <div class="info-group">
                    <label class="info-label">État de la livraison</label>
                    {# Utilisation de la variable isLivreur passée par le controller #}
                    {% if isLivreur is defined and isLivreur %}
                        {{ form_widget(form.etat, {'attr': {'class': 'form-input'}}) }}
                    {% else %}
                        {{ form_widget(form.etat, {'attr': {'class': 'form-input', 'readonly': 'readonly', 'style': 'pointer-events: none; opacity: 0.7;'}}) }}
                        <small style="color: #999;">(Accès réservé aux livreurs)</small>
                    {% endif %}
                    <div class="form-error">{{ form_errors(form.etat) }}</div>
