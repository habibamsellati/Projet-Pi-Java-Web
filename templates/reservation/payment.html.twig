{% extends 'base.html.front.twig' %}

{% block title %}Paiement Sécurisé - AfkArt{% endblock %}

{% block stylesheets %}
    <style>
        .payment-page {
            background: #FAF9F6;
            min-height: 100vh;
            padding: 120px 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .payment-card {
            background: white;
            width: 100%;
            max-width: 550px;
            border-radius: 40px;
            box-shadow: 0 30px 80px rgba(0,0,0,0.04);
            padding: 50px;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(0,0,0,0.03);
        }
        .card-decoration {
            position: absolute;
            top: -60px;
            right: -60px;
            width: 250px;
            height: 250px;
            background: rgba(196, 112, 75, 0.05);
            border-radius: 50%;
        }
        .price-tag {
            font-family: 'Cormorant Garamond', serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: #2b2b2b;
            margin: 25px 0;
            display: flex;
            align-items: baseline;
            justify-content: center;
            gap: 10px;
        }
        .form-label {
            display: block;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 700;
            color: #888;
            margin-bottom: 12px;
        }
        .form-input {
            width: 100%;
            padding: 18px;
            border: 1px solid #f0f0f0;
            border-radius: 15px;
            margin-bottom: 25px;
            font-family: 'Outfit', sans-serif;
            font-size: 1.1rem;
            outline: none;
            transition: all 0.3s ease;
            background: #fcfcfc;
        }
        .form-input:focus {
            border-color: #C4704B;
            background: white;
            box-shadow: 0 10px 20px rgba(196, 112, 75, 0.05);
        }
        .pay-button {
            width: 100%;
            background: #2b2b2b;
            color: white;
            border: none;
            padding: 22px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }
        .pay-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            background: #C4704B;
        }
    </style>
{% endblock %}

{% block body %}
<div class="payment-page">
    <div class="payment-card">
        <div class="card-decoration"></div>
        
        <div style="text-align: center; margin-bottom: 40px; position: relative; z-index: 1;">
            <div style="width: 60px; height: 60px; background: rgba(196, 112, 75, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; color: #C4704B;">
                <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
            </div>
            <p style="text-transform: uppercase; letter-spacing: 3px; font-size: 0.75rem; font-weight: 700; color: #C4704B; margin-bottom: 10px;">Paiement Sécurisé</p>
            <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 2.5rem; line-height: 1.2; color: #2b2b2b; margin: 0;">Validation Finale</h1>
            
            <div class="price-tag">
                {{ (reservation.nbPlaces * reservation.evenement.prix)|number_format(2) }}
                <span style="font-size: 1.2rem; font-weight: 500; font-family: 'Outfit', sans-serif;">TND</span>
            </div>
            <p style="color: #666; font-size: 1rem;">Réservation pour <span style="font-weight: 700; color: #2b2b2b;">{{ reservation.evenement.nom }}</span></p>
        </div>

        {# Display PHP Errors Global #}
        {% if errors is defined and errors|length > 0 %}
            <div style="background: #ffe6e6; border-left: 4px solid #e74c3c; padding: 15px; margin-bottom: 30px; border-radius: 5px;">
                <h4 style="margin: 0 0 10px; color: #c0392b; font-size: 1rem;"><i class="fas fa-exclamation-circle"></i> Erreur de validation</h4>
                <ul style="margin: 0; padding-left: 20px; color: #c0392b; font-size: 0.9rem;">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <form method="post" novalidate style="position: relative; z-index: 1;">
            <label class="form-label">Détenteur de la carte</label>
            <input type="text" name="card_holder" class="form-input" placeholder="Nom complet sur la carte" value="{{ last_inputs.card_holder|default('') }}" style="{{ errors.card_holder is defined ? 'border-color: #e74c3c;' : '' }}">
            {% if errors.card_holder is defined %}
                <div style="color: #e74c3c; font-size: 0.8rem; margin-top: -20px; margin-bottom: 20px;">{{ errors.card_holder }}</div>
            {% endif %}

            <label class="form-label">Numéro de Carte</label>
            <input type="text" name="card_number" class="form-input" placeholder="0000 0000 0000 0000" maxlength="19" value="{{ last_inputs.card_number|default('') }}" style="{{ errors.card_number is defined ? 'border-color: #e74c3c;' : '' }}">
            {% if errors.card_number is defined %}
                <div style="color: #e74c3c; font-size: 0.8rem; margin-top: -20px; margin-bottom: 20px;">{{ errors.card_number }}</div>
            {% endif %}

            <div style="display: grid; grid-template-columns: 1.2fr 1fr; gap: 20px;">
                <div>
                    <label class="form-label">Expiration</label>
                    <input type="text" name="expiry_date" class="form-input" placeholder="MM/YY" maxlength="5" value="{{ last_inputs.expiry_date|default('') }}" style="{{ errors.expiry_date is defined ? 'border-color: #e74c3c;' : '' }}">
                    {% if errors.expiry_date is defined %}
                        <div style="color: #e74c3c; font-size: 0.8rem; margin-top: -20px; margin-bottom: 20px;">{{ errors.expiry_date }}</div>
                    {% endif %}
                </div>
                <div>
                    <label class="form-label">CVC / CVV</label>
                    <input type="password" name="cvc" class="form-input" placeholder="***" maxlength="3" value="{{ last_inputs.cvc|default('') }}" style="{{ errors.cvc is defined ? 'border-color: #e74c3c;' : '' }}">
                    {% if errors.cvc is defined %}
                        <div style="color: #e74c3c; font-size: 0.8rem; margin-top: -20px; margin-bottom: 20px;">{{ errors.cvc }}</div>
                    {% endif %}
                </div>
            </div>

            <button type="submit" class="pay-button">
                <span>Confirmer le Paiement</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
            </button>
        </form>

        <div style="margin-top: 40px; text-align: center; border-top: 1px solid #f5f5f5; padding-top: 30px;">
            <div style="display: flex; justify-content: center; gap: 30px; opacity: 0.5;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" alt="Visa" style="height: 15px;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" style="height: 22px;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" alt="PayPal" style="height: 18px;">
            </div>
            <p style="color: #AAA; font-size: 0.75rem; margin-top: 20px; font-weight: 500;">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 4px;"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                Transactions chiffrées en AES-256 par AfkArt Security
            </p>
        </div>
    </div>
</div>
{% endblock %}
