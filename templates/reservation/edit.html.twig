{% extends 'base.html.front.twig' %}

{% block title %}Modifier la Réservation - AfkArt{% endblock %}

{% block body %}
<section style="max-width: 700px; margin: 0 auto; padding: 2rem 1.5rem;">
    <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 2rem; color: #3d2817; margin-bottom: 1.5rem;">Modifier la Réservation</h1>
    <a href="{{ path('app_reservation_index') }}" style="display: inline-block; margin-bottom: 1rem; color: #8b5e4a; text-decoration: none; font-weight: 500;">← Retour aux réservations</a>
    <div style="background: white; padding: 1.5rem 2rem; border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.08);">
        {{ include('reservation/_form.html.twig', {button_label: 'Mettre à jour'}) }}
    </div>
</section>
<style>
    .form-error-message, .form-group ul { color: #b91c1c; font-size: 0.875rem; margin-top: 0.25rem; list-style: none; padding: 0; }
    .form-group label { display: block; font-weight: 600; color: #374151; margin-bottom: 0.35rem; font-size: 0.9rem; }
</style>
{% endblock %}
