{% extends 'base.html.front.twig' %}

{% block title %}Confirmation de R√©servation - AfkArt{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Assets/css/premium-events.css') }}">
    <style>
        .reservation-flow {
            display: grid;
            grid-template-columns: 1fr 380px;
            gap: 60px;
            align-items: start;
        }
        .step-indicator {
            display: flex;
            gap: 15px;
            margin-bottom: 40px;
        }
        .step {
            flex: 1;
            height: 6px;
            background: #F0F0F0;
            border-radius: 10px;
        }
        .step.active {
            background: var(--art-secondary);
        }
        .step.doing {
            background: var(--art-accent);
        }
    </style>
{% endblock %}

{% block body %}
<div style="background: #FAF9F6; min-height: 100vh; padding-top: 120px; padding-bottom: 80px;">
    <div class="container">
        <div style="margin-bottom: 50px; text-align: center;">
            <div style="font-family: 'Outfit', sans-serif; text-transform: uppercase; letter-spacing: 4px; font-size: 0.8rem; color: #C4704B; font-weight: 700; margin-bottom: 15px;">√âtape de R√©servation</div>
            <h1 style="font-family: 'Cormorant Garamond', serif; font-size: 3.5rem; color: #2b2b2b; margin: 0 0 15px 0;">Finalisez votre <span style="color: #C4704B;">Exp√©rience</span></h1>
            <p style="color: #666; font-size: 1.1rem; max-width: 600px; margin: 0 auto;">V√©rifiez vos informations et choisissez votre mode de r√©servation pour garantir votre place.</p>
        </div>

        <div class="reservation-flow" style="display: grid; grid-template-columns: 1.8fr 1fr; gap: 50px; align-items: start;">
            {# Left Column: Form #}
            <div style="background: white; border-radius: 30px; padding: 50px; box-shadow: 0 20px 60px rgba(0,0,0,0.03); border: 1px solid rgba(0,0,0,0.05);">
                <div class="step-indicator" style="display: flex; gap: 15px; margin-bottom: 40px;">
                    <div style="height: 4px; flex: 1; background: #C4704B; border-radius: 10px;"></div>
                    <div style="height: 4px; flex: 1; background: #C4704B; border-radius: 10px;"></div>
                    <div style="height: 4px; flex: 1; background: #F0F0F0; border-radius: 10px;"></div>
