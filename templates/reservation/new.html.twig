                <div style="background: white; border-radius: 30px; padding: 40px; box-shadow: 0 20px 60px rgba(0,0,0,0.03); border: 1px solid rgba(0,0,0,0.05);">
                    <h3 style="font-family: 'Cormorant Garamond', serif; font-size: 1.8rem; border-bottom: 1px solid #f0f0f0; padding-bottom: 20px; margin-bottom: 30px; color: #2b2b2b;">
                        R√©capitulatif
                    </h3>
                    
                    {% if reservation.evenement %}
                    <div style="display: flex; gap: 20px; margin-bottom: 30px;">
                        <div style="width: 80px; height: 80px; border-radius: 15px; overflow: hidden; flex-shrink: 0;">
                            <img src="{{ reservation.evenement.image }}" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                        </div>
                        <div>
                            <div style="font-weight: 700; color: #2b2b2b; font-size: 1.1rem; margin-bottom: 5px;">{{ reservation.evenement.nom }}</div>
                            <div style="font-size: 0.85rem; color: #888;">üìç {{ reservation.evenement.lieu }}</div>
                            <div style="font-size: 0.85rem; color: #C4704B; font-weight: 600; margin-top: 5px;">{{ reservation.evenement.typeArt }}</div>
                        </div>
                    </div>

                    <div style="background: #FAF9F6; border-radius: 20px; padding: 25px; margin-bottom: 30px;">
                         <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                            <span style="color: #888; font-size: 0.9rem;">Prix unitaire</span>
                            <span style="font-weight: 600; color: #2b2b2b;">{{ reservation.evenement.prix }} TND</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding-top: 15px; border-top: 1px solid #eee; margin-top: 15px;">
                            <span style="font-weight: 700; color: #2b2b2b;">Estimation Total</span>
                            <span style="color: #C4704B; font-weight: 800; font-size: 1.4rem;">{{ reservation.evenement.prix }} TND</span>
                        </div>
                    </div>
