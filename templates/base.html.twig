<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}AfkArt{% endblock %}</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Assets/css/back.css') }}">
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #fdfbf7;">

    {% block navbar %}
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light py-4" style="background-color: #fdfbf7;">
        <div class="container">
            <a class="navbar-brand fs-2 font-serif" href="{{ path('home') }}" style="font-family: 'Playfair Display', serif;">
                <span class="fw-bold">Afk</span> <span style="color: #c46210;">Art</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav gap-4">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="{{ path('app_produit_index') }}">Produit recyclable</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Artisans</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Galerie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Blog</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex gap-3">
                 <a href="#" class="btn btn-outline-dark rounded-pill px-4 py-2">Connexion</a>
                <a href="#" class="btn text-white rounded-pill px-4 py-2" style="background-color: #c46210; border: none;">Rejoindre</a>
            </div>
        </div>
    </nav>
    {% endblock %}

    {% block main_content %}
    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        
        {% block body %}{% endblock %}
    </main>
    {% endblock %}

    {% block footer %}{% endblock %}
</body>
</html>
